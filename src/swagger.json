{
    "openapi": "3.0.0",
    "info": {
        "title": "Zuvia-Academy",
        "description": "Essa API tem o objetivo a manipulação de dados",
        "termsOfService": "https://zuvia-academy.vercel.app/terms",
        "contact": {
            "email": "lucas.carlim@zuvia.com.br"
      },
      "version": "1.0.0"
    },
    "servers": [
      {
        "url": "https://zuvia-academy.vercel.app"
      }
    ],
    "paths": {
        "/users/register": {
            "post": {
              "summary": "Cadastro de usuários",
              "description": "Essa rota será responsável por cadastrar um novo usuário. Segue a requisição com as informações corretas e com uma senha no mínimo de 6 caracteres.",
              "tags": [
                "Usuário"
              ],
              "requestBody": {
                "content": {
                  "application/json": {
                    "schema": {
                      "$ref": "#/components/schemas/User"
                    }
                  }
                }
              },
              "responses": {
                "500": {
                  "description": "Houve um erro no registro!"
                },
                "201": {
                  "description": "Usuário criado com sucesso!",
                  "content": {
                    "application/json": {
                      "schema": {
                        "$ref": "#/components/schemas/User"
                      }
                    }
                  }
                }
              }
            }
        },
        "/users/login": {
            "post": {
              "summary": "Login",
              "description": "Essa rota será responsável para efetuar login.",
              "tags": [
                "Usuário"
              ],
              "requestBody": {
                "content": {
                  "application/json": {
                    "schema": {
                      "type": "object",
                      "properties": {
                        "email": {
                          "type": "string"
                        },
                        "password": {
                          "type": "string"
                        }
                      }
                    }
                  }
                }
              },
              "responses": {
                "200": {
                  "description": "Usuário logado com sucesso!"
                },
                "400": {
                  "description": "Houve um erro no login!"
                }
              }
            }
        },
        "/users/confirmemail": {
            "post": {
              "summary": "Confirmação de email",
              "description": "Essa rota será responsável por enviar o código recebido no email",
              "tags": [
                "Usuário"
              ],
              "requestBody": {
                "content": {
                  "application/json": {
                    "schema": {
                      "type": "object",
                      "properties": {
                        "code": {
                          "type": "number"
                        }
                      }
                    }
                  }
                }
              },
              "responses": {
                "200": {
                  "description": "Código validado com sucesso"
                },
                "400": {
                  "description": "Erro ao validar"
                }
              }
            }
        },
        "/users/resend-code": {
          "post": {
            "summary": "Reenviar código no email",
            "description": "Essa rota será responsável por reenviar código no email do usuário",
            "tags": [
              "Usuário"
            ],
            "requestBody": {
              "content": {
                "application/json": {
                }
              }
            },
            "responses": {
              "200": {
                "description": "Código enviado"
              },
              "400": {
                "description": "Erro ao enviar código"
              }
            }
          }
        },
        "/users/forgot_password": {
          "post": {
            "summary": "Enviar token para o email do usuário",
            "description": "Essa rota será responsável em enviar um token no email do usuário, será necessário para resgatar a senha.",
            "tags": [
              "Usuário"
            ],
            "requestBody": {
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "email": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            },
            "responses": {
              "200": {
                "description": "Token enviado"
              },
              "400": {
                "description": "Erro ao enviar o token"
              }
            }
          }
        },
        "/users/reset_password": {
          "post": {
            "summary": "Resetar a senha",
            "description": "Essa rota será responsável por resetar e trocar a senha do usuário",
            "tags": [
              "Usuário"
            ],
            "requestBody": {
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "email": {
                        "type": "string"
                      },
                      "token": {
                        "type": "string"
                      },
                      "password": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            },
            "responses": {
              "200": {
                "description": "Senha resetada com sucesso"
              },
              "400": {
                "description": "Erro ai resetar a senha"
              }
            }
          }
        },
        "/users/list": {
            "get": {
              "tags": [
                "Usuário"
              ],
              "summary": "Listar usuários",
              "description": "Essa rota é responsável em listar todos os usuários da aplicação.",
              "responses": {
                "200": {
                  "description": "Usuários: ",
                  "content": {
                    "application/json": {
                      "schema": {
                        "$ref": "#/components/schemas/User"
                      }
                    }
                  }
                },
                "400": {
                  "description": "Erro na listagem de usuários!"
                }
              }
            }
        },
        "/users/find/{id}": {
            "get": {
              "summary": "Buscar usuário por ID",
              "description": "Essa rota será responsável por buscar um usuário pelo ID e passar as informações do próprio.",
              "tags": [
                "Usuário"
              ],
              "parameters": [
                {
                  "name": "id",
                  "in": "path",
                  "description": "ID do usuário",
                  "required": true,
                  "schema": {
                    "type": "string"
                  }
                }
              ],
              "responses": {
                "200": {
                "description": "Success"
                },
                "404": {
                  "description": "Not found"
                }
              }
            }
        },
        "/users/delete/{id}": {
            "delete": {
              "summary": "Deletar um usuário",
              "description": "Deletar o usuário pelo ID",
              "tags": [
                "Usuário"
              ],
              "parameters": [
                {
                  "name": "id",
                  "in": "path",
                  "description": "ID do usuário",
                  "required": true,
                  "schema": {
                    "type": "string"
                  }
                }
              ],
              "responses": {
                "200": {
                "description": "Usuário deletado"
                },
                "404": {
                  "description": "Usuário não encontrado"
                }
              }
            }
        }
    },
    "components": {
        "schemas": {
          "User": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "last_name": {
                "type": "string"
              },
              "email": {
                "type": "string"
              },
              "password": {
                "type": "string"
              },
              "confirm_password": {
                "type": "string"
              },
              "phone_number": {
                "type": "string"
              },
              "cep": {
                "type": "string"
              },
              "number": {
                "type": "string"
              }
            },
            "required": ["name", "last_name", "email", "password", "confirm_password", "phone_number", "cep", "number"]
          }
        },
        "securitySchemes": {
          "bearer_token": {
            "type": "http",
            "description": "Coloque seu token aqui!",
            "scheme": "bearer",
            "in": "header",
            "bearerFormat": "JWT"
          }
        }
      },
      "security": [
        {
        "bearer_token": {
          "type": "http",
          "scheme": "bearer_token",
          "bearerFormat": "JWT"
        }
      }
     ]
}